<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_event_card"
    android:padding="14dp"
    android:layout_marginBottom="16dp">

    <!-- top row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(Event Name)"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRsvp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="96dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="RSVP"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_rsvp_button"
            android:backgroundTint="@null"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <!-- white info panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_inner_panel"
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next event insert here"
            android:textColor="@color/muted"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="short description"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- comments chip -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_label_chip"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp"/>

    <!-- comments panel (with min height so it never squashes) -->
    <RelativeLayout
        android:id="@+id/commentsBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:background="@drawable/bg_inner_panel"
        android:padding="12dp">

        <!-- live comments -->
        <LinearLayout
            android:id="@+id/liveComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/inputRow"
            android:layout_marginBottom="12dp"/>

        <!-- input row pinned to bottom -->
        <LinearLayout
            android:id="@+id/inputRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/etComment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Type here..."
                android:textColor="@android:color/black"
                android:textColorHint="#777777"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/bg_comment_input"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSend"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_send_button"
                android:backgroundTint="@null"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
