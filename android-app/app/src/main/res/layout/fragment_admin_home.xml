        <!-- Top Paw Prints -->
        <ImageView
            android:id="@+id/pawTop"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-15dp"
            android:rotation="-10"
            android:src="@drawable/paw_reversed_svg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, (Username)!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to do?"
            android:textSize="18sp"
            android:textColor="@color/purple"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Manage Dogs -->
        <FrameLayout
            android:id="@+id/MngDogsBtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/button_dog"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Manage Dogs"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:gravity="center|right"
                android:paddingRight="10dp" />
        </FrameLayout>

        <!-- Manage Events -->
        <FrameLayout
            android:id="@+id/MngEventsBtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/button_event"
            app:layout_constraintTop_toBottomOf="@id/MngDogsBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Manage Events"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:paddingLeft="10dp" />
        </FrameLayout>



