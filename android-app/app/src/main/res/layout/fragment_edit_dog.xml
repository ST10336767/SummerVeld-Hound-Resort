<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Paw Prints -->
        <ImageView
            android:id="@+id/imgPawsTop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/paw"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-15dp"
            android:rotation="-15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Dog"
            android:textColor="@color/purple"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imgPawsTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-75dp" />

        <!-- Dog Image -->
        <FrameLayout
            android:id="@+id/frameLayout_picture_placeholder"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/rounded_edittext_background"
            app:layout_constraintTop_toBottomOf="@id/textView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <!-- Dog Image Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog Photo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="8dp" />

            <FrameLayout
                android:id="@+id/frameLayoutImageContainer"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/image_border"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageDogEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog_placeholder"
                    android:contentDescription="Dog image preview" />

                <TextView
                    android:id="@+id/textViewImageHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tap to change photo"
                    android:textColor="@color/purple"
                    android:textSize="12sp"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Dog Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog Name *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <EditText
                android:id="@+id/editDogName"
                android:hint="Enter dog's name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"/>

            <!-- Breed Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <EditText
                android:id="@+id/editBreed"
                android:hint="Enter dog's breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"/>

            <!-- Colour Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colour *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <EditText
                android:id="@+id/editColour"
                android:hint="Enter dog's colour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"/>

            <!-- Gender Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"/>

            <!-- Date of Birth Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <EditText
                android:id="@+id/editDob"
                android:hint="Tap to select date (e.g. 15 Mar 2020)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"/>

            <!-- Description Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <EditText
                android:id="@+id/editDescription"
                android:hint="Enter dog's description, personality, special needs, etc."
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"/>

        <EditText
            android:id="@+id/editBreed"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:hint="Enter breed"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/label_breed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="32dp" />

        <!-- Colour -->
        <TextView
            android:id="@+id/label_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colour:"
            android:textSize="18sp"
            android:textColor="@color/purple"
            app:layout_constraintTop_toBottomOf="@id/editBreed"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/buttonCancelEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â† Back"
                android:backgroundTint="@color/dark_purple"
                android:textColor="@android:color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
