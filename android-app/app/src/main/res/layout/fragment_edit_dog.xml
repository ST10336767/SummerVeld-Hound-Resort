<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageDogEdit"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dog_placeholder"
                android:layout_marginBottom="16dp"
                android:contentDescription="Dog image preview" />

            <EditText
                android:id="@+id/editDogName"
                android:hint="Dog Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editBreed"
                android:hint="Breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editColour"
                android:hint="Colour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Gender Spinner -->
            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Date of Birth picker -->
            <EditText
                android:id="@+id/editDob"
                android:hint="Date of Birth (e.g. 15 Mar 2020)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editDescription"
                android:hint="Description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonSaveDog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/buttonDeleteDog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Dog"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/buttonCancelEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â† Back"
                android:backgroundTint="@color/dark_purple"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
