<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    tools:context=".ui.admin.CreateDog">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingBottom="-10dp">        <!-- Paw Prints -->        <ImageView            android:id="@+id/imgPawsTop"            android:layout_width="150dp"            android:layout_height="150dp"            android:src="@drawable/paw"            android:layout_marginTop="-15dp"            android:layout_marginEnd="-15dp"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintEnd_toEndOf="parent" />        <ImageView            android:id="@+id/imgPawsBottom"            android:layout_width="150dp"            android:layout_height="150dp"            android:src="@drawable/paw"            android:layout_marginStart="-30dp"            app:layout_constraintTop_toBottomOf="@+id/editText_description"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"/>        <!-- Title -->        <TextView            android:id="@+id/textView_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Add a Dog"            android:textColor="@color/purple"            android:textSize="26sp"            android:textStyle="bold"            app:layout_constraintTop_toBottomOf="@+id/imgPawsTop"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginTop="-65dp" />        <!-- Picture -->        <TextView            android:id="@+id/textView_picture_label"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Picture of the Dog:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/textView_title"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="30dp" />        <FrameLayout            android:id="@+id/frameLayout_picture_placeholder"            android:layout_width="160dp"            android:layout_height="160dp"            android:background="@drawable/rounded_edittext_background"            app:layout_constraintTop_toBottomOf="@id/textView_picture_label"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginTop="8dp">            <ImageView                android:id="@+id/imageView_dog_picture"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:scaleType="centerCrop"                android:visibility="gone" />            <TextView                android:id="@+id/textView_placeholder_text"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:text="Tap to add picture"                android:textColor="@color/black"                android:textSize="14sp" />        </FrameLayout>        <!-- Name -->        <TextView            android:id="@+id/label_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Name:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/frameLayout_picture_placeholder"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="16dp" />        <EditText            android:id="@+id/editText_name"            android:layout_width="0dp"            android:layout_height="48dp"            android:background="@drawable/edittext_background"            android:paddingHorizontal="12dp"            android:textColor="@color/black"            android:textSize="16sp"            android:hint="Enter dogs name"            android:textColorHint="@color/black"            app:layout_constraintTop_toBottomOf="@id/label_name"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginHorizontal="32dp" />        <!-- DOB -->        <TextView            android:id="@+id/label_dob"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Date of Birth:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/editText_name"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="12dp" />        <EditText            android:id="@+id/editText_dob"            android:layout_width="0dp"            android:layout_height="48dp"            android:background="@drawable/edittext_background"            android:paddingHorizontal="12dp"            android:textColor="@color/black"            android:textSize="16sp"            android:hint="Select date of birth"            android:textColorHint="@color/black"            app:layout_constraintTop_toBottomOf="@id/label_dob"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginHorizontal="32dp" />        <!-- Breed -->        <TextView            android:id="@+id/label_breed"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Breed:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/editText_dob"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="12dp" />        <EditText            android:id="@+id/editText_breed"            android:layout_width="0dp"            android:layout_height="48dp"            android:background="@drawable/edittext_background"            android:paddingHorizontal="12dp"            android:textColor="@color/black"            android:textSize="16sp"            android:hint="Enter breed"            android:textColorHint="@color/black"            app:layout_constraintTop_toBottomOf="@id/label_breed"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginHorizontal="32dp" />        <!-- Colour -->        <TextView            android:id="@+id/label_colour"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Colour:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/editText_breed"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="12dp" />        <EditText            android:id="@+id/editText_colour"            android:layout_width="0dp"            android:layout_height="48dp"            android:background="@drawable/edittext_background"            android:paddingHorizontal="12dp"            android:textColor="@color/black"            android:textSize="16sp"            android:hint="Enter colour"            android:textColorHint="@color/black"            app:layout_constraintTop_toBottomOf="@id/label_colour"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginHorizontal="32dp" />        <!-- Gender -->        <TextView            android:id="@+id/label_gender"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Gender:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/editText_colour"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="12dp" />        <Spinner            android:id="@+id/spinner_gender"            android:layout_width="0dp"            android:layout_height="48dp"            android:background="@drawable/rounded_spinner_background"            android:entries="@array/gender_options"            android:spinnerMode="dropdown"            app:layout_constraintTop_toBottomOf="@id/label_gender"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginHorizontal="32dp"            />        <!-- Description -->        <TextView            android:id="@+id/label_description"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Description:"            android:textSize="18sp"            android:textColor="@color/black"            app:layout_constraintTop_toBottomOf="@id/spinner_gender"            app:layout_constraintStart_toStartOf="parent"            android:layout_marginStart="32dp"            android:layout_marginTop="12dp" />        <EditText            android:id="@+id/editText_description"            android:layout_width="351dp"            android:layout_height="107dp"            android:layout_marginHorizontal="32dp"            android:background="@drawable/edittext_background"            android:gravity="top"            android:hint="Tell us more about the dog..."            android:inputType="textMultiLine"            android:padding="12dp"            android:textColor="@color/black"            android:textColorHint="@color/black"            android:textSize="16sp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/label_description" />        <!-- Button -->        <Button            android:id="@+id/button_add_dog"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Add Dog"            android:textColor="@color/white"            android:textStyle="bold"            android:textSize="18sp"            android:backgroundTint="@color/dark_purple"            app:layout_constraintTop_toBottomOf="@id/editText_description"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:layout_marginTop="24dp"            android:layout_marginBottom="100dp" />    </androidx.constraintlayout.widget.ConstraintLayout></ScrollView>