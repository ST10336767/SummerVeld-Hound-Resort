<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".ui.admin.CreateDog">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding Dog"
        android:textColor="#E91E63"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp" />



    <TextView
        android:id="@+id/textView_picture_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture of Dog:"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title"
        android:layout_marginTop="40dp" />

    <FrameLayout
        android:id="@+id/frameLayout_picture_placeholder"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_picture_label">

        <ImageView
            android:id="@+id/imageView_dog_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_placeholder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:text="Tap to add picture"
            android:textColor="#616161"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout_picture_placeholder"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:hint="Doge"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_name_label"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_name_label"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView_dob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="DOB:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_name_label"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editText_dob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:hint="Select Date"
        android:textSize="16sp"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_dob_label"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_dob_label"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView_breed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="Breed:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_dob_label"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editText_breed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:hint="German Shepard"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_breed_label"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_breed_label"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView_colour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="Colour:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_breed_label"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editText_colour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:hint="Black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_colour_label"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_colour_label"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView_gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="Gender:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_colour_label"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/rounded_spinner_background"
        android:entries="@array/gender_options"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_gender_label"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_gender_label"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_gender_label"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="Tell us more about your dog..."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_description_label"
        app:layout_constraintTop_toTopOf="@id/textView_description_label"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/button_add_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:text="ADD DOG"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>