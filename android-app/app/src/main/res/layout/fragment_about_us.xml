<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.about.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="90dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/dark_purple"
            android:text="â† Back"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="12dp" />

        <!-- Top area (paw + title stacked) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Paw trail in top-left (scrolls together) -->
            <ImageView
                android:id="@+id/pawTrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/paw_trail"
                android:contentDescription="@string/cd_paw_decor"
                android:alpha="0.25" />

            <!-- Title text lowered slightly to center with paw trail -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_us_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="center"
                android:layout_marginTop="42dp"
                android:paddingBottom="16dp" />
        </FrameLayout>

        <!-- Who We Are -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_who_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/brand_magenta"
            android:gravity="center"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvWho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_who_body"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:paddingTop="8dp" />

        <View
            android:layout_width="64dp"
            android:layout_height="1dp"
            android:background="@color/brand_maroon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <!-- How We Operate -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_what_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/brand_magenta"
            android:gravity="center"
            android:paddingTop="24dp" />

        <TextView
            android:id="@+id/tvWhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_operate_body"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:paddingTop="8dp" />

        <View
            android:layout_width="64dp"
            android:layout_height="1dp"
            android:background="@color/brand_maroon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <!-- How Our Journey Started -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_goal_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/brand_magenta"
            android:gravity="center"
            android:paddingTop="24dp" />

        <TextView
            android:id="@+id/tvGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_journey_body"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:paddingTop="8dp" />

        <!-- section divider before the footer link -->
        <View
            android:layout_width="64dp"
            android:layout_height="1dp"
            android:background="@color/brand_maroon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

        <!-- footer link to Privacy -->
        <TextView
            android:id="@+id/linkPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="14sp"
            android:textColor="@color/brand_magenta"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <!-- SPACE -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>
