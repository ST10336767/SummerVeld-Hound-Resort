<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <!-- decorative paw -->
    <ImageView
        android:id="@+id/pawHeader"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-26dp"
        android:layout_marginEnd="-28dp"
        android:contentDescription="@null"
        android:rotation="-8"
        android:scaleType="centerCrop"
        android:src="@drawable/paw" />

    <!-- content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Editing Event"
                android:textColor="@color/dark_purple"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp" />

            <!-- form card -->
            <LinearLayout
                android:id="@+id/formCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_inner_panel"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:clipToOutline="true">

                <EditText
                    android:id="@+id/eventNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Event Name"
                    android:background="@drawable/bg_comment_input"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/eventDateInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="YYYY-MM-DD"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@drawable/bg_comment_input"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/eventTimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="HH:MM"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@drawable/bg_comment_input"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/eventLocationInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Location"
                    android:background="@drawable/bg_comment_input"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/eventDescInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Short description"
                    android:background="@drawable/bg_comment_input"
                    android:gravity="top|start"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- action buttons -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/saveEventBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Changes"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/dark_purple"/>

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/dark_purple"
                    android:text="Cancel Changes"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/deleteEventBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove Event"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/DangerBtn"/>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
