<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Theme Settings"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your preferred theme"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/lightThemeOption">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_light_mode_24"
            android:layout_marginEnd="16dp"
            app:tint="?android:attr/textColorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light Theme"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use system default or light theme"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivLightSelected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_check_24"
            android:visibility="gone"
            app:tint="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/darkThemeOption">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_dark_mode_24"
            android:layout_marginEnd="16dp"
            app:tint="?android:attr/textColorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Theme"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use dark theme for better night viewing"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivDarkSelected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_check_24"
            android:visibility="gone"
            app:tint="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/systemThemeOption">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_settings_24"
            android:layout_marginEnd="16dp"
            app:tint="?android:attr/textColorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Default"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow system theme settings"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivSystemSelected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_check_24"
            android:visibility="gone"
            app:tint="@color/black" />
    </LinearLayout>

</LinearLayout>
