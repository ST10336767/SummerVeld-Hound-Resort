<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.events.EventCommentsActivity">

    <!-- decorative paw top-right -->
    <ImageView
        android:id="@+id/pawHeader"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-26dp"
        android:layout_marginEnd="-28dp"
        android:rotation="-8"
        android:scaleType="centerCrop"
        android:alpha="0.12"
        android:src="@drawable/paw"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <!-- header row: back on left, title center -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/dark_purple"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Comments"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/dark_purple"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Card event name -->
        <LinearLayout
            android:id="@+id/cardEventHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_inner_panel"
            android:padding="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All comments for this event"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerComments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="12dp" />

    </LinearLayout>
</FrameLayout>
