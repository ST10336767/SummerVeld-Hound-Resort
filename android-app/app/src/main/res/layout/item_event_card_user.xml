<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventCardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_event_card_soft"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Top row: colored accent + event info + RSVP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Left accent bar -->
        <View
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="#9C7EDB" />

        <!-- Event main info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Event Name + RSVP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Dog Adoption Day"
                    android:textColor="#2D2D2D"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonRsvp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/light_gray"
                    android:minWidth="72dp"
                    android:paddingHorizontal="12dp"
                    android:stateListAnimator="@null"
                    android:text="RSVP"
                    android:textAllCaps="true"
                    android:textColor="#7E57C2"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Date / Time / Location row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-11-08"
                    android:textColor="#8C6EC9"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#B39DDB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:21 (Time)"
                    android:textColor="#8C6EC9"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#B39DDB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durban"
                    android:textColor="#8C6EC9"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="12 members going"
                android:textColor="#7E57C2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Join us for a fun day to find your new furry friend!"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- View comments clickable -->
    <TextView
        android:id="@+id/viewCommentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:text="View Comments (3)"
        android:textColor="#7E57C2"
        android:textSize="13sp"
        android:textStyle="bold" />

    <!-- Comments RecyclerView, hidden by default -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_comment_section_soft"
        android:nestedScrollingEnabled="false"
        android:visibility="gone" />

    <!-- Comment input row -->
    <LinearLayout
        android:id="@+id/commentInputRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_comment_input_soft"
            android:hint="Type a comment..."
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#2D2D2D"
            android:textColorHint="#B39DDB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSendComment"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@color/light_gray"
            android:backgroundTint="@null"
            android:stateListAnimator="@null"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#7E57C2" />
    </LinearLayout>
</LinearLayout>