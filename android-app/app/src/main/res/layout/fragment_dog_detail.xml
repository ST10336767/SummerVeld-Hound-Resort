<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Paw Prints -->
            <ImageView
                android:id="@+id/pawTop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="-40dp"
                android:layout_marginEnd="-135dp"
                android:rotation="-15"
                android:src="@drawable/paw_reversed_svg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Dog Name -->
            <TextView
                android:id="@+id/textDogNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog Name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#AD3A7A"
                android:layout_marginTop="-90dp"
                android:layout_marginBottom="16dp"
                android:paddingBottom="20dp" />

            <!-- Dog Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDogImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imageDogDetail"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="Dog Photo" />
            </androidx.cardview.widget.CardView>



            <!-- Breed Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breed"
                    android:textColor="@color/purple"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textBreedDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="18sp"
                    android:textColor="@color/purple_text"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Date of Birth Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="20sp"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDobDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="18sp"
                    android:textColor="@color/purple_text"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Color and Gender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Color -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="20sp"
                        android:textColor="@color/purple"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textColorDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknown"
                        android:textSize="18sp"
                        android:textColor="@color/purple_text"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Gender -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="20sp"
                        android:textColor="@color/purple"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textGenderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknown"
                        android:textSize="18sp"
                        android:textColor="@color/purple_text"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- About Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="20sp"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No description available."
                    android:textSize="16sp"
                    android:textColor="@color/purple_text"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Back Button -->
            <Button
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Dogs"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_purple"
                android:textSize="16sp"
                android:padding="10dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
