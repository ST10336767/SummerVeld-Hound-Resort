<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/dark_purple"
            android:text="← Back"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="12dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_management_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Warning Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Important Notice"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E65100"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_deletion_warning"
                    android:textSize="14sp"
                    android:textColor="#BF360C"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Deletion Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_deletion_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permanently delete your account and all associated data including:\n• Profile information\n• Event comments\n• RSVP responses\n\nThis action cannot be undone."
            android:textSize="14sp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp"
            android:lineSpacingExtra="2dp" />

        <Button
            android:id="@+id/buttonDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D32F2F"
            android:text="@string/account_deletion_button"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:padding="16dp" />

        <!-- Support Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginBottom="20dp" />

        <!-- Contact Support Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/buttonContactSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_purple"
                    android:text="Contact Support"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Need help with data management or have questions?"
                    android:textSize="12sp"
                    android:textColor="@color/purple" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Additional Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For more information about our data practices, please review our Privacy Policy."
            android:textSize="12sp"
            android:textColor="@color/purple"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>
